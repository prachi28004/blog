<% include partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog : <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
        <div class="field ">
            <label>Title:</label>
            <div class="ui  fluid icon input">
                <input type="text " name="blog[title]" value=<%= blog.title %>">
            </div>
        </div>
        <div class="field ">
             <label>Image:</label>
             <div class="ui  fluid icon input">
                 <input type="text " name="blog[image]" value=<%=blog.image%>>
             </div>
        </div>
        <div class="field ">
            <label>Blog COntent:</label>
            <div class="ui fluid icon input">
                    <textarea name="blog[body]"><%= blog.body %></textarea>
            </div>
        </div>
            <input type="submit" class="ui inverted big violet button" >
    </form>
</div>
<% include partials/footer%>